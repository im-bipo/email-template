<%
	const grad = (siteData && siteData.color && siteData.color.gradiant) ? siteData.color.gradiant : [];
	const g1 = grad && grad[0] ? grad[0] : (siteData && siteData.color && siteData.color.primary ? siteData.color.primary : '#9A844A');
	const g2 = grad && grad[1] ? grad[1] : (siteData && siteData.color && siteData.color.secondary ? siteData.color.secondary : '#A68B49');
	const logoSrc = (siteData && siteData.site && (siteData.site.logo || siteData.site.siteLogo)) ? (siteData.site.logo || siteData.site.siteLogo) : null;
	const siteName = (siteData && siteData.site && (siteData.site.name || siteData.site.siteName)) ? (siteData.site.name || siteData.site.siteName) : '-';
	const headerStyle = 'background-color:' + (siteData && siteData.color && siteData.color.primary ? siteData.color.primary : '#9A844A') + '; background-image:linear-gradient(135deg, ' + g1 + ', ' + g2 + ');';
%>



<table width="100%" cellpadding="0" cellspacing="0" role="presentation" <% if (headerStyle) { %>style="<%= headerStyle %>"<% } %> >
        <tr>
          <td align="center" style="padding:28px 24px;">
            <% if (logoSrc) { %>
              <img src="<%= logoSrc %>" alt="<%= siteName %>" width="75" height="75" style="display:block;margin-bottom:20px;object-fit:contain;border-radius:50%; width: 75px; height: 75px;" />
            <% } else { %>
              <div style="display:inline-block; width:75px; height:75px; background:rgba(255,255,255,0.25); color:#fff; font-weight:700; font-size:20px; line-height:75px; text-align:center; margin-bottom:20px;"><%= siteName.slice(0,2).toUpperCase() %></div>
            <% } %>
            <p style="margin:0;font-size:16px;color:#ffffff;font-weight:500;letter-spacing:0.5px">Booking Confirmation</p>
          </td>
        </tr>
      </table>
